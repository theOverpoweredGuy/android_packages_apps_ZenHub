<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/lockscreen_ambient_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">


    <PreferenceCategory
        android:key="notification_screen"
        android:title="@string/notification_screen_title" >

        <com.zenx.support.preferences.SystemSettingSwitchPreference
            android:key="ambient_notification_light"
            android:title="@string/pulse_ambient_light_title"
            android:summary="@string/pulse_ambient_light_summary"
            android:defaultValue="false" />

        <com.zenx.support.preferences.SystemSettingSwitchPreference
            android:key="ambient_light_pulse_for_all"
            android:title="@string/pulse_ambient_light_show_always_title"
            android:summary="@string/pulse_ambient_light_show_always_summary"
            android:dependency="ambient_notification_light"
            android:defaultValue="false" />

        <com.zenx.support.preferences.SystemSettingListPreference
            android:key="ambient_light_layout"
            android:title="@string/pulse_ambient_light_layout_title"
            android:entries="@array/pulse_ambient_light_layout_entries"
            android:entryValues="@array/pulse_ambient_light_layout_values"
            android:defaultValue="0" />

        <ListPreference
            android:key="ambient_light_color"
            android:title="@string/pulse_ambient_light_color_mode_title"
            android:entries="@array/pulse_ambient_light_color_mode_entries"
            android:entryValues="@array/pulse_ambient_light_color_mode_values"
            android:dependency="ambient_notification_light"
            android:defaultValue="0" />

        <com.zenx.support.colorpicker.ColorPickerPreference
            android:key="ambient_light_custom_color"
            android:title="@string/pulse_ambient_light_color_title"
            android:dependency="ambient_notification_light"
            settings:defaultColorValue="0xFF3980FF" />

        <com.zenx.support.preferences.CustomSeekBarPreference
            android:key="ambient_light_duration"
            android:title="@string/pulse_ambient_light_duration_title"
            android:dependency="ambient_notification_light"
            android:defaultValue="2"
            android:max="10"
            settings:min="1"
            settings:units="sec" />

        <com.zenx.support.preferences.CustomSeekBarPreference
            android:key="ambient_light_repeat_count"
            android:title="@string/pulse_ambient_light_repeat_count_title"
            android:dependency="ambient_notification_light"
            android:defaultValue="0"
            android:max="10"
            settings:min="0" />

         <com.zenx.support.preferences.SystemSettingListPreference
            android:key="ambient_light_repeat_direction"
            android:title="@string/pulse_ambient_light_repeat_direction_title"
            android:entries="@array/pulse_ambient_light_repeat_direction_entries"
            android:entryValues="@array/pulse_ambient_light_repeat_direction_values"
            android:defaultValue="0" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="custom_doze"
        android:title="@string/custom_doze_settings">

        <Preference
            android:key="ambient_display_custom"
            android:persistent="false"
            android:title="@string/ambient_display_custom_title">
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="com.custom.ambient.display"
                android:targetClass="com.custom.ambient.display.DozeSettings" />
        </Preference>

    </PreferenceCategory>

     <PreferenceCategory
        android:title="@string/synthos_ambient_text_category_title">

        <com.zenx.support.preferences.SystemSettingSwitchPreference
            android:key="synthos_ambient_text"
            android:title="@string/synthos_ambient_text_title"
            android:summary="@string/synthos_ambient_text_summary"
            android:defaultValue="false" />

        <com.zenx.support.preferences.SystemSettingSwitchPreference
            android:key="synthos_ambient_text_animation"
            android:title="@string/synthos_ambient_text_animation_title"
            android:summary="@string/synthos_ambient_text_animation_summary"
            android:dependency="synthos_ambient_text"
            android:defaultValue="false" />

        <com.zenx.support.preferences.SystemSettingEditTextPreference
            android:key="synthos_ambient_text_string"
            android:title="@string/synthos_ambient_text_string_title"
            android:dependency="synthos_ambient_text"
            android:defaultValue="#ZenX-OS" />

        <ListPreference
            android:key="synthos_ambient_text_font"
            android:title="@string/synthos_ambient_text_font_title"
            android:dialogTitle="@string/synthos_ambient_text_font_title"
            android:entries="@array/lock_clock_fonts_entries"
            android:entryValues="@array/lock_clock_fonts_values"
            android:summary="%s"
            android:defaultValue="8"
            android:dependency="synthos_ambient_text"
            android:persistent="false" />

        <ListPreference
            android:key="synthos_ambient_text_type_color"
            android:title="@string/synthos_ambient_text_type_color_title"
            android:dialogTitle="@string/synthos_ambient_text_type_color_title"
            android:entries="@array/ambient_text_type_color_entries"
            android:entryValues="@array/ambient_text_type_color_values"
            android:summary="%s"
            android:defaultValue="0"
            android:dependency="synthos_ambient_text"
            android:persistent="false" />

        <com.zenx.support.colorpicker.ColorPickerPreference
            android:key="synthos_ambient_text_color"
            android:title="@string/synthos_ambient_text_color_title"
            android:persistent="false"
            settings:defaultColorValue="0xFF3980FF" />

        <com.zenx.support.preferences.SystemSettingSeekBarPreference
            android:key="synthos_ambient_text_size"
            android:title="@string/synthos_ambient_text_size_title"
            android:max="100"
            android:min="0"
            android:dependency="synthos_ambient_text"
            settings:units="dp"
            android:defaultValue="55" />

        <ListPreference
            android:key="synthos_ambient_text_alignment"
            android:title="@string/synthos_ambient_text_align_title"
            android:summary="%s"
            android:dialogTitle="@string/synthos_ambient_text_align_title"
            android:entries="@array/ambient_text_alignment_entries"
            android:entryValues="@array/ambient_text_alignment_values"
            android:defaultValue="3"
            android:dependency="synthos_ambient_text"
            android:persistent="false" />

        <com.zenx.support.preferences.SystemSettingSwitchPreference
            android:key="synthos_ambient_image"
            android:title="@string/synthos_ambient_image_title"
            android:defaultValue="false" />

        <Preference
            android:key="file_ambient_select"
            android:title="@string/file_header_select_title"
            android:summary="@string/file_header_select_summary"
            android:persistent="false"
            android:dependency="synthos_ambient_image" >
        </Preference>

        <com.zenx.support.preferences.SystemSettingSwitchPreference
            android:key="synthos_ambient_video"
            android:title="@string/synthos_ambient_video_title"
            android:defaultValue="false" />

        <Preference
            android:key="file_ambient_video_select"
            android:title="@string/file_video_select_title"
            android:summary="@string/file_video_select_summary"
            android:persistent="false"
            android:dependency="synthos_ambient_video" >
        </Preference>

        <com.zenx.support.preferences.SystemSettingSwitchPreference
            android:key="synthos_ambient_video_looping"
            android:title="@string/synthos_ambient_video_looping_title"
            android:dependency="synthos_ambient_video"
            android:defaultValue="true" />

    </PreferenceCategory>


</PreferenceScreen>
